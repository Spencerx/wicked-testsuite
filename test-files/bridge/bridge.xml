<interface>
  <name>br1</name>

  <bridge>
    <stp>true</stp>
    <forward-delay>15</forward-delay>
    <ports>
      <port>
        <device>eth1</device>
      </port>
      <port>
        <device>dummy1</device>
      </port>
    </ports>
  </bridge>

  <ipv4:static>
    <address>
      <local>172.16.100.200/16</local>
    </address>
  </ipv4:static>

  <ipv6:static>
    <address>
      <local>fd00:c0de:ba5e:100::200/48</local>
    </address>
  </ipv6:static>
</interface>

<interface>
  <name>eth1</name>
  <!-- We intentionally use a static setup here,
       as there is a test to remove the bridge interface,
       and we want the interface still to work afterwards -->

  <ipv4:static>
    <address>
      <local>172.16.0.123/16</local>
    </address>
  </ipv4:static>

  <ipv6:static>
    <address>
      <local>fd00:c0de:ba5e::123/48</local>
    </address>
  </ipv6:static>
</interface>

<interface>
  <name>dummy1</name>

  <dummy>
    <address>42:41:40:3F:3E:3D</address>
  </dummy>
</interface>
