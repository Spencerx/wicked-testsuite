<interface>
  <name>ib0</name>

  <infiniband>
    <mode>datagram</mode>
<!-- in order to test more combinations,
     multicast is disallowed with legacy ifcfg files,
     and allowed with wicked XML files -->
    <multicast>allowed</multicast>
  </infiniband>

  <ipv4:dhcp>
    <enabled>true</enabled>
    <defer-timeout>10</defer-timeout>
    <acquire-timeout>10</acquire-timeout>
  </ipv4:dhcp>

  <ipv6:dhcp>
    <enabled>true</enabled>
    <defer-timeout>10</defer-timeout>
    <acquire-timeout>10</acquire-timeout>
  </ipv6:dhcp>
</interface>
